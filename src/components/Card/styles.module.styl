.card
  width 100%
  display flex
  gap 20px

  &Image
    width 80px
    max-height 100%
    align-self flex-end
    object-fit contain

    @media screen and (min-width: 768px)
      width 150px

  &Info
    display flex
    flex-direction column

  &Name
    font-size 20px

  &Tagline
    font-size 16px

  &ContributedByTitle
    font-size 16px
    margin-bottom 0

  &ContributedByText
    font-size 12px
    color cornflowerblue
    margin-top 4px
    display none

    @media screen and (min-width: 768px)
      display block

  &Abv
    font-size 16px

  &AbvValue
    font-size 16px
    color cadetblue

  &Volume
    font-size 20px
    display none

    @media screen and (min-width: 768px)
      display block

  &VolumeValue
    font-size 28px
    color red
    display none

    @media screen and (min-width: 768px)
      display block

  &Button
    border 0
    padding 10px 0
    width 100%
    background-color aliceblue
    transition all .2s
    margin-top auto

    &:hover
      cursor pointer
      background-color black
      color white
